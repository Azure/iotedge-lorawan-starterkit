{
  "modulesContent": {
    "$edgeAgent": {
      "properties.desired.modules.IotHubMetricsCollectorModule": {
        "settings": {
          "image": "mcr.microsoft.com/azureiotedge-metrics-collector:1.0"
        },
        "type": "docker",
        "env": {
          "ResourceId": {
            "value": "/subscriptions/$SUBSCRIPTION_ID/resourceGroups/iottest/providers/Microsoft.Devices/IotHubs/$GATEWAY_NAME"
          },
          "UploadTarget": {
            "value": "AzureMonitor"
          },
          "LogAnalyticsWorkspaceId": {
            "value": "$LOG_ANALYTICS_WORKSPACE_ID"
          },
          "LogAnalyticsSharedKey": {
            "value": "$LOG_ANALYTICS_SHARED_KEY"
          },
          "MetricsEndpointsCSV": {
            "value": "http://edgeHub:9600/metrics,http://edgeAgent:9600/metrics"
          }
        },
        "status": "running",
        "restartPolicy": "always",
        "version": "1.0"
      }
    }
  }
}
