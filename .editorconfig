# http://editorconfig.org/

root = true

[*]
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
charset = utf-8

[*.{csproj,vbproj,vcxproj,vcxproj.filters,proj,projitems,shproj}]
indent_size = 2

[*.{sln}]
charset = utf-8
indent_style = tab

[*.{json,yml}]
charset = utf-8
indent_size = 2

[*.{cs,tt}]
charset = utf-8
indent_size = 4
